mixin header(data)
    header#header.header
        .header-information
            .container
                .row
                    .col-md-8
                        h1= data.title
                        h4= data.undertitle
                        p= data.desc
                        .caption.mt-20
                            span.caption-name= data.name
                            span.caption-email= data.email
                        a.button(href="#")= data.button

        .bg-image