mixin head(data)
    meta(charset="utf-8")
    title= data.title + '::' + config.project

    if data.meta
        meta(content=data.meta.author name="author")
        meta(content=data.meta.description name="description")
        meta(content=data.meta.keywords name="keywords")

    if data.mobile
        meta(content="telephone=no" name="format-detection")
        meta(name="robots" content="noodp, noydir")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        //- This make sence for mobile browsers. It means, that content has been optimized for mobile browsers
        meta(name="HandheldFriendly" content="true")
        meta(content="IE=edge" http-equiv="X-UA-Compatible")

    //- Stylesheets
    link(rel="stylesheet", href="#{config.paths.stylesheets}/bootstrap.min.css")
    link(rel="stylesheet", href="#{config.paths.stylesheets}/style.css")

    //- Fonts
    link(rel="stylesheet", href="#{config.fonts.opensans}")
    link(rel="stylesheet", href="#{config.fonts.sourcesan}")
    link(rel="stylesheet", href="#{config.fonts.robotostab}")
    link(rel="stylesheet", href="#{config.fonts.pacifico}")