.header
    display: table
    width: 100%
    height: 700px
    position: relative

    &-information
        display: table-cell
        vertical-align: middle
        width: inherit
        height: inherit

        .info-title
        .info-undertitle
        .info-description
            @extend .font-color-white

        .info-title
            font-size: 80px
            line-height: 1.3
            padding-right: 40%
            text-shadow 0 3px 2px rgba(0,0,0,.7)

        .info-undertitle
            text-transform: uppercase
            font-size: 24px
            font-weight: 400

        .info-description
            font-size: 14px
            font-weight: 300
            padding-right: 20%

        .caption
            &-name
                svg
                    width: 30px
                    height: 13px
            &-email
                padding-left: 20px
                font-style: italic
                color: #e1e1e1

    .bg-image
        background: url("../assets/images/header_bg_image.jpg") no-repeat center
        background-size: cover
        display: block
        position: absolute
        top: 0
        left: 0
        z-index: -2
        width: 100%
        height: 100%

        &:before
            content: ''
            display: block
            width: inherit
            height: inherit
            position: absolute
            top: 0
            left: 0
            z-index: -1
            background-color: wet-asphalt
            opacity: .4