.header
    display: table-cell
    width: 100%
    height: 700px
    position: relative

    .bg-image
        background: url("../assets/images/header_bg_image.jpg") no-repeat center bottom
        background-size: cover
        display: block
        position: absolute
        top: 0
        left: 0
        z-index: -2
        width: 100%
        height: 100%

        &:before
            content: ''
            display: block
            width: inherit
            height: inherit
            position: absolute
            top: 0
            left: 0
            z-index: -1
            background-color: wet-asphalt
            opacity: .3