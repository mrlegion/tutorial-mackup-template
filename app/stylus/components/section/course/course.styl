.course
    display: block
    margin-top: 10px
    margin-bottom: 10px

    &-container
        position: relative
        width: 100%
        height: 175px
        background-color: alizarin
        border-radius: 5px
        box-shadow: 0 0 5px rgba(0,0,0,.3)
        transition: box-shadow .3s ease
        overflow: hidden

        &:hover
            box-shadow: 0 0 40px rgba(0,0,0,.3)

        .title
            @extend .font-color-white

            position: absolute
            top: 50%
            left: 20px
            transform: translate(0, -50%)
            padding-right: 40%
            margin: 0
            
        svg
            display: block
            position: absolute
            top: 50%
            right: -40px
            transform translate(0, -50%)
            width: 250px
            height: 250px